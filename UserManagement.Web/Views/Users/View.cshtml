@model UserManagement.Web.Models.Users.ViewUserModel

<h1>View User</h1>

<div>
    <dl>
        <dt>Forename</dt>
        <dd>@Model.Forename</dd>

        <dt>Surname</dt>
        <dd>@Model.Surname</dd>

        <dt>Email</dt>
        <dd>@Model.Email</dd>

        <dt>Active</dt>
        <dd>@(Model.IsActive ? "Yes" : "No")</dd>

        <dt>Date of Birth</dt>
        <dd>@Model.DateOfBirth.ToString("yyyy-MM-dd")</dd>
    </dl>
</div>

<hr />

<h3>User Logs</h3>

<div style="max-height: 300px; overflow-y: auto; border: 1px solid #ccc; padding: 10px;">
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Action</th>
                <th>Timestamp</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Logs != null && Model.Logs.Any())
            {
                foreach (var log in Model.Logs)
                {
                    <tr>
                        <td>@log.Action</td>
                        <td>@log.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2" class="text-center">No logs available.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<a href="/users" class="btn btn-secondary mt-3">Back</a>
